<config>

    <modules>
        <Optimiseweb_Adminforms>
            <version>0.2.1</version>
        </Optimiseweb_Adminforms>
    </modules>

    <admin>
        <routers>
            <adminforms>
                <use>admin</use>
                <args>
                    <module>Optimiseweb_Adminforms</module>
                    <frontName>adminforms</frontName>
                </args>
            </adminforms>
        </routers>
    </admin>
    
    <frontend>
        
        <translate>
            <modules>
                <Optimiseweb_Adminforms>
                    <files>
                        <default>Optimiseweb_Adminforms.csv</default>
                    </files>
                </Optimiseweb_Adminforms>
            </modules>
        </translate>

    </frontend>
    
    <adminhtml>
        
        <translate>
            <modules>
                <Optimiseweb_Adminforms>
                    <files>
                        <default>Optimiseweb_Adminforms.csv</default>
                    </files>
                </Optimiseweb_Adminforms>
            </modules>
        </translate>
        
    </adminhtml>
    
    <global>

        <blocks>
            <adminforms>
                <class>Optimiseweb_Adminforms_Block</class>
            </adminforms>
        </blocks>

        <helpers>
            <adminforms>
                <class>Optimiseweb_Adminforms_Helper</class>
            </adminforms>
        </helpers>

        <models>
            <adminforms>
                <class>Optimiseweb_Adminforms_Model</class>
            </adminforms>
        </models>

    </global>

</config>